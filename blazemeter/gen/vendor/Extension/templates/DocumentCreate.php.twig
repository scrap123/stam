
<?php

    /**
     * @param $initialArray
     *
     * @return \{{ class }}
     */
    static public function create($initialArray = array())
    {
        return mandango_get()->create('\{{ class }}', [$initialArray]);
    }

    /**
     * @param $id
     *
     * @return \{{ class }}|null
     */
    static public function load($id)
    {
        return \{{ class }}Repository::get()->findOneById($id);
    }

