
<?php

    public function getCriteria()
    {
        $criteria = parent::getCriteria();
        if (!isset($criteria['deleted'])) {
            $criteria['deleted'] = ['$exists' => false];
        }
        return $criteria;
    }

    public function criteria(array $criteria)
    {
        if (!isset($criteria['deleted'])) {
            $criteria['deleted'] = ['$exists' => false];
        }
        return parent::criteria($criteria);
    }

